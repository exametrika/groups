<project name="product.natives" default="release" basedir=".">
    <description>
        Product Natives build script
    </description>

    <import file="../../src/product.xml"/>
    
    <property name="product.version" value="1.0.0" />
    <property name="product.name" value="exametrika.natives" />
    <property name="product.title" value="Exametrika natives product." />
    <fileset id="product.libraries" dir="${product.lib.dir}" includes="libexa*.so exa*.dll" excludes="*.jar *.zip" />
    <fileset id="product.test-libraries" dir="${product.lib.dir}" includes="libexa*.so exa*.dll" excludes="*.jar *.zip" />
    
    <target name="product.modules">
        <module dir="${root.dir}/profiler.native"/>
        <module dir="${root.dir}/profiler.native.agent"/>
    </target>

    <target name="product.test-modules">
    </target>
    
</project>
